.app--tweet
	form(action='/', method='post')
		.circle--fluid
			.circle--fluid--cell.circle--fluid--primary.align-bottom.app--tweet--post
				.app--avatar(style='background-image: url(' + profileImg + ')')
					img(src='images/m-spore.png')
				textarea#tweet-textarea.circle--textarea--input(type='text', name='tweetSent', placeholder="What's happening?")
				strong#tweet-char.app--tweet--char 140
			.circle--fluid--cell.align-bottom
				button.button-primary(type='submit') Tweet